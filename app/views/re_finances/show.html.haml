= title("#{@re_finance.title} - Агентство Недвижимости #{@re_finance.city.name} #{@re_finance.state.name}")
= desc("#{@re_finance.title}. #{@re_finance.description}")
- content_for :head do
  %meta{property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] }/
  %meta{property: "og:type", content: "business.business"}/
  %meta{property: "og:url", content: re_finance_url(@re_finance) }/
  %meta{property: "og:title", content: @re_finance.title}/
  %meta{property: "og:image", content: @re_finance.logo.url(:medium)}/
  %meta{property: "og:description", content: stripped_200(@re_finance.description)}/
  %meta{property: "place:location:latitude", content: @re_finance.lat}/
  %meta{property: "place:location:longitude", content: @re_finance.lng}/

  %meta{property: "business:contact_data:street_address", content: @re_finance.street}/
  %meta{property: "business:contact_data:locality", content: "USA"}/
  %meta{property: "business:contact_data:postal_code", content: @re_finance.zip}/
  %meta{property: "business:contact_data:country_name", content: "USA"}/

- content_for :secondary_navbar do
  = render "shared/navbars/ezrealty"

= render "shared/show/company", record: @re_finance
