.row
  %h4.pull-right
    %a= "Всего #{@re_commercials.total_count}"
  = render 'real_estate/re_commercials/search_modal'
.row
  %hr/
  - @re_commercials.each do |re_commercial|
    = render 'dashboard/re_commercials/re_commercial',
             re_commercial: re_commercial


- if @re_commercials.empty?
  .row
    = render "shared/no_posts_message"
- else
  .row
    %hr/
    .text-center
      = paginate @re_commercials, :theme => 'twitter-bootstrap-3'
    %hr/
