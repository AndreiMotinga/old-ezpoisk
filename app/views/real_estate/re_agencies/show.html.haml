= render 'real_estate/re_agencies/re_agency', re_agency: @re_agency
%br/
%div
  / Nav tabs
  %ul.nav.nav-tabs{:role => "tablist"}
    %li.active{:role => "presentation"}
      %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"}
        О Компании
    %li{:role => "presentation"}
      %a{"aria-controls" => "messages", "data-toggle" => "tab", :href => "#contacts", :role => "tab"}
        Контакты
  / Nav tabs
  %hr/
  / Tab panes
  .tab-content
    #home.tab-pane.fade.in.active{:role => "tabpanel"}
      = @re_agency.show_description
    #contacts.tab-pane.fade{:role => "tabpanel"}
      .row
        .col-lg-6.col-md-6.col-sm-6
          = render 'shared/contact', post: @re_agency
