<!-- Button trigger modal -->
<a role="button" class="btn btn-primary" data-toggle="modal" data-target="#pirvateSearch">
  Расширенный поиск
</a>

<!-- Modal -->
<div class="modal fade" id="pirvateSearch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"> Расширенный поиск </h4>
        <hr class="post-devider">
        <div class="row">
          <div class="col-md-4 col-sm-4">
            <a>Всего {{model.meta.total_posts}} </a>
          </div>
          <div class="col-md-4 pull-right">
            {{params-sort options=sortOptions paramValue=sortType sortDesc=sortDesc}}
          </div>
        </div>
      </div>

      <div class="modal-body">

        {{state-select state_id=state_id}} <br>
        {{city-select state_id=state_id city_ids=city_ids multiple=true}}<br>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            {{select-2 content=postTypes value=postType optionValuePath="id" placeholder="Тип" }}<br>
            {{select-2 content=durationTypes value=durationType optionValuePath="id" placeholder="Срок" }}<br>
            {{select-2 content=minPriceTypes value=min_price optionValuePath="id" placeholder="$ minimum" }}<br>
            {{select-2 content=feeTypes value=fee optionValuePath="id" placeholder="Fee" }}<br>
          </div>
          <div class="col-md-6 col-sm-6">
            {{select-2 content=spaceOptions value=min_space optionValuePath="id" placeholder="Площадь" }}<br>
            {{select-2 content=roomsOptions value=min_rooms optionValuePath="id" placeholder="Комнат" }}<br>
            {{select-2 content=maxPriceTypes value=max_price optionValuePath="id" placeholder="$ maximum" }}<br>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <a href="/real_estate/private" class="btn btn-danger pull-left">Сброс</a>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Поиск</button>
      </div>
    </div>
  </div>
</div>
