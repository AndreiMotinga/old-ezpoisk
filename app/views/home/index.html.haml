- content_for :left_sidebar do
  = render 'home/left_sidebar'

/ Main
.row.grey-block
  .col-md-12
    %h4.main-title= link_to (post = @posts.shift).title, news_path(post)
    .col-md-5.main-text
      = strip_tags(post.body).truncate(350)
    .col-md-7.main-image
      = image_tag post.logo, class: "img-responsive"

%br/
= render @posts

.row
  .col-md-12.text-center
    = link_to "Читать дальше",
              news_index_path,
              class: "btn btn-default btn-large btn-big"
%br/
/ Main
