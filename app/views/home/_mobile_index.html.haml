.visible-xs
  %div
    / Nav tabs
    %ul.nav.nav-tabs.mobile-nav-tabs.text-center{:role => "tablist"}
      %li.text-center.active{:role => "presentation"}
        %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"} Объявления
      %li.text-center{:role => "presentation"}
        %a{"aria-controls" => "profile", "data-toggle" => "tab", :href => "#profile", :role => "tab"} Новости
      %li.text-center{:role => "presentation"}
        %a{"aria-controls" => "messages", "data-toggle" => "tab", :href => "#messages", :role => "tab"} Аккаунт
    / Tab panes
    .tab-content
      %br/
      #home.tab-pane.active{:role => "tabpanel"}
        %ul.list-group
          = link_to questions_path, class: "mobile-link" do
            %li.list-group-item Ответы
          = link_to ezrealty_re_agencies_path, class: "mobile-link" do
            %li.list-group-item Агентства недвижимости
          = link_to ezrealty_re_finances_path, class: "mobile-link" do
            %li.list-group-item Финансирование
          = link_to ezrealty_re_privates_path, class: "mobile-link" do
            %li.list-group-item Частная недвижимость
          = link_to ezrealty_re_commercials_path, class: "mobile-link" do
            %li.list-group-item Коммерческая недвижимость
          = link_to ezjob_job_agencies_path, class: "mobile-link" do
            %li.list-group-item Агентства по трудоустройству
          = link_to ezjob_jobs_path, class: "mobile-link" do
            %li.list-group-item Работа
          = link_to services_path, class: "mobile-link" do
            %li.list-group-item Услуги
          = link_to sales_path, class: "mobile-link" do
            %li.list-group-item Продается

      #profile.tab-pane{:role => "tabpanel"}
        %ul.list-group
          - @homepage.news_posts(20).each do |p|
            = link_to news_path(p) do
              %li.list-group-item.mobile-link= p.title
        = link_to 'Еще Новости', news_index_path, class: "mobile-btn btn-block text-center"
      #messages.tab-pane{:role => "tabpanel"}
        - if current_user
          %ul.list-group
            = link_to dashboard_path do
              %li.list-group-item.mobile-link Мои объявления
            = link_to edit_user_registration_path do
              %li.list-group-item.mobile-link Личные данные
        - else
          = bootstrap_form_for(:user, :url => session_path(:user)) do |f|
            = f.text_field :email
            = f.password_field :password, label: "Пароль"
            = f.check_box :remember_me, label: "Запомнить меня"
            = f.submit 'Войти', class: "btn btn-block mobile-btn"
            %br/
            %hr/
            = link_to "Регистрация", new_registration_path(:user), class: "mobile-link"
            %br/
            = link_to "Забыли пароль?", new_password_path(:user), class: "mobile-link"
            %br/
            = link_to "Не получили код разблокировки?", new_unlock_path(User), class: "mobile-link"
