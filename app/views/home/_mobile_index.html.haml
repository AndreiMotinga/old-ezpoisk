.visible-xs
  %div
    / Nav tabs
    %ul.nav.nav-tabs.mobile-nav-tabs.text-center{:role => "tablist"}
      %li.text-center.active{:role => "presentation"}
        %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"} Объявления
      %li.text-center{:role => "presentation"}
        %a{"aria-controls" => "profile", "data-toggle" => "tab", :href => "#profile", :role => "tab"} Инфа
      %li.text-center{:role => "presentation"}
        - if user_signed_in?
          %a{"aria-controls" => "messages", "data-toggle" => "tab", :href => "#messages", :role => "tab"} Аккаунт
        - else
          = link_to t(:sign_in), "", "data-target": "#new_session_modal", "data-toggle": "modal", role: "button", id: "login_link"
    / Tab panes
    .tab-content
      %br/
      #home.tab-pane.active{:role => "tabpanel"}
        %ul.list-group
          = link_to re_agencies_path, class: "mobile-link" do
            %li.list-group-item Агентства недвижимости
          -# = link_to re_finances_path, class: "mobile-link" do
          -#   %li.list-group-item Финансирование
          = link_to re_privates_path, class: "mobile-link" do
            %li.list-group-item Частная недвижимость
          = link_to re_commercials_path, class: "mobile-link" do
            %li.list-group-item Коммерческая недвижимость
          = link_to job_agencies_path, class: "mobile-link" do
            %li.list-group-item Агентства по трудоустройству
          = link_to jobs_path, class: "mobile-link" do
            %li.list-group-item Работа
          = link_to services_path, class: "mobile-link" do
            %li.list-group-item Услуги
          = link_to sales_path, class: "mobile-link" do
            %li.list-group-item Продается

      #profile.tab-pane{:role => "tabpanel"}
        %ul.list-group
          = link_to questions_path, class: "mobile-link" do
            %li.list-group-item Вопросы
          = link_to posts_path, class: "mobile-link" do
            %li.list-group-item Новости

      #messages.tab-pane{:role => "tabpanel"}
        - if user_signed_in?
          %ul.list-group
            = link_to dashboard_path do
              %li.list-group-item.mobile-link Панель управления
            = link_to profile_path(current_user.profile) do
              %li.list-group-item.mobile-link Мой профаил

          %ul.list-group
            = link_to main_app.destroy_user_session_path, method: :delete do
              %li.list-group-item.mobile-link Выйти
