/ Button trigger modal
%button.btn.btn-block.btn-success{ "data-target" => "#new",
                         "data-toggle" => "modal",
                         :role => "button" }
  = t(:new_post)

/ Modal
#new.modal.fade{"aria-labelledby" => "myModalLabel",
                :role => "dialog",
                :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content

      .modal-header
        %button.close{"aria-label" => "Close",
                      "data-dismiss" => "modal",
                      :type => "button"}
          %span{"aria-hidden" => "true"} ×

        %h4#myModalLabel.modal-title
          = t(:category)
      / .modal-header

      .modal-body
        .row
          .col-lg-12
            .list-group
              = link_to t(:re_agency),
                        new_dashboard_re_agency_path,
                        class: 'list-group-item'
              = link_to "Частная недвижимость",
                        new_dashboard_re_private_path,
                        class: 'list-group-item'
              = link_to "Коммерческая недвижимость",
                        new_dashboard_re_commercial_path,
                        class: 'list-group-item'

              = link_to "Услуги",
                        new_dashboard_service_path,
                        class: 'list-group-item'

              = link_to "Агентство по трудоустройству",
                        new_dashboard_job_agency_path,
                        class: 'list-group-item'
              = link_to "Работа",
                        new_dashboard_job_path,
                        class: 'list-group-item'

              = link_to "Продается",
                        new_dashboard_sale_path,
                        class: 'list-group-item'
            %br/
            %br/
            .list-group
              = link_to t(:leave_a_comment),
                        new_feedback_path,
                        class: 'list-group-item'
      / .modal-body

      .modal-footer
        %button.btn.btn-primary{"aria-label" => "Close",
                                "data-dismiss" => "modal",
                                :type => "button"}
          = t(:close)
