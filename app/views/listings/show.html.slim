- d = strip_tags(@listing.text).truncate(150)
- d = "#{t @listing.category} #{d}"
= desc(d)

- t = @listing.title? ? @listing.title : t(@listing.category)
= title("#{t} #{@listing.city.name} #{@listing.state.name}")

= og_type("article")
= og_url(@listing.show_url)

- content_for :sidebar do
  = render "shared/show/contacts", record: @listing

= render "shared/show/pictures", record: @listing

.col-xs-12
  = render @listing
= render "shared/comments", record: @listing
/= render "shared/gads/leaderboard"
.visible-xs
  = render "shared/show/contacts", record: @listing
= render "shared/show/map", record: @listing
