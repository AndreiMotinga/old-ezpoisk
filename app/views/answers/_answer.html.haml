.white-block
  .panel.panel-default
    .panel-heading
      .row
        .hidden-xs.col-sm-1.qa-avatar
          = link_to profile_path(answer.user.profile) do
            = image_tag answer.user_avatar, alt: answer.user.profile.name, class: "img-responsive img-circle center-block"
        .col-sm-11
          %h3.text-muted.question-author= link_to answer.user.name_to_show, profile_path(answer.user.profile)
          %p #{answer.impressions_count} просмотров
          - if answer.user == current_user
            = link_to "редактировать", edit_question_answer_path(answer.question, answer), class: "text text-muted qa-links"
            = link_to 'удалить', answer_path(answer), class: "text text-muted qa-links", method: :delete, data: { confirm: I18n.t(:confirm) }

    .panel-body
      -# todo-question is this ok?
      .text.answer= raw answer.text

      - if user_signed_in?
        .col-xs-12
          / voting_links
          = current_user.voted_for?(answer) ? voted_answer_btn(answer) : upvote_answer_btn(answer)
          = link_to "Downvote", downvote_answer_path(answer), method: :put, remote: true, class: "text text-muted qa-links"
          = link_to "Коментарии", "#answer-comments", class: "text text-muted qa-links", "aria-expanded": "false", "data-toggle": "collapse"
      - else
        = link_to "Войдите, что бы голосовать", "", "data-target": "#new_session_modal", "data-toggle": "modal", id: "login_link"

      / comments
      #answer-comments.collapse
        .fb-comments{"data-href": question_url(answer.question, answer: answer.id), "data-numposts": "5"}
