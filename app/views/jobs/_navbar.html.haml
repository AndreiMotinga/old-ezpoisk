%nav.navbar.navbar-default.secondary-navbar.white
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{ "aria-expanded" => "false",
                                       "data-target" => "#dashboard-nav-bar",
                                       "data-toggle" => "collapse",
                                       :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to main_app.jobs_job_agencies_path do
        = image_tag "logos/ezjob", class: "img-responsive", id: 'brand-image'
    / Collect the nav links, forms, and other content for toggling
    #dashboard-nav-bar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li{:class => ("active" if cp(jobs_job_agencies_path))}
          = link_to "Агентства", jobs_job_agencies_path
        %li{:class => ("active" if cp(jobs_jobs_path))}
          = link_to "Работа", jobs_jobs_path
    / /.navbar-collapse
  / /.container-fluid
