/ Modal
#jobSearch.modal.fade{ "aria-labelledby" => "myModalLabel",
                           :role => "dialog",
                           :tabindex => "-1" }
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4#myModalLabel.modal-title.text-center Настроить Фильтр

      .modal-body
        %form.form-horizontal{action: jobs_path, method: :get}
          = render "shared/search_by_address"
          %hr/
          .form-group
            = label_tag "Категория", nil,  class: "col-sm-3 control-label"
            .col-sm-5
              = select_tag :category,
                options_for_select(JOB_CATEGORIES, params[:category]),
                include_blank: true,
                class: "form-control"
          %hr/
          .row
            .col-xs-6
              = link_to "Сбросить",
                jobs_path,
                class: "btn btn-block mobile-btn"
            .col-xs-6
              = submit_tag "Фильтроваить", name: nil, class: "btn btn-block mobile-btn"
