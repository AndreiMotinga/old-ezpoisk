.row.white-block class=("user-hidden" if job.user_hidden?(current_user)) data-hidden=job.id
  .listing
    .panel.panel-default
      - if job.title.present?
        .panel-heading
          = render "shared/favor_links", record: job
          - if controller_name == "jobs" && action_name == "show"
            h4= job.title
          - else
            h4= link_to job.title, job_path(job)

      .panel-body
        - if job.logo?
          = link_to job_path(job) do
            = image_tag job.logo.url(:large),
                        alt: "#{job.title} #{t job.category} в #{job.city.name} #{job.state.name}",
                        class: "img-responsive center-block",
                        itemprop: "image"
          hr

        .text itemprop="description"
          = markdown job.text
        p.tags
          - job.tag_list.each do |sub|
            a.tag= " ##{sub} "

      .panel-footer
        span #{t job.category} |
        = " "
        span data-time=job.id
          = timeago_tag job.updated_at
        .row
          .col-xs-7
            - if job.remote?
              strong Доступна во всех штатах
            - else
              strong #{job.city.name}, #{job.state.name}
