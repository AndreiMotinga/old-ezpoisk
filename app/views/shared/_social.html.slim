- url ||= request.original_url
#share-data data-url=url
/ desktop
.social-share
  ul.list-unstyled class=("list-inline" if inline)
    li.vk
      a.vk
    li.my-g-plus
      .g-plus data-action="share" data-width=200 data-annotation="bubble" data-href=url
    - if count
      li.prosmotrov
        i.fa.fa-eye.text-muted
        span  #{count}
    li.fb
      /.fb-share-button data-action="like" data-href=url data-layout="button_count" data-show-faces="true"
      .fb-share-button[data-href=url data-layout="button_count" data-size="small"]

- unless Rails.env.test?
  #fb-root
  script async="" defer="" src="https://apis.google.com/js/platform.js"
