/ Modal
#new.modal.fade{"aria-labelledby" => "myModalLabel",
                :role => "dialog",
                :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content

      .modal-header
        %button.close{"aria-label" => "Close",
                      "data-dismiss" => "modal",
                      :type => "button"}
          %span{"aria-hidden" => "true"} ×

        %h4#myModalLabel.modal-title
          Подайте объявление в раздел:
      / .modal-header

      .modal-body
        .row
          .col-lg-12
            .list-group
              = link_to "Агентства недвижимости", new_dashboard_re_agency_path, class: 'list-group-item'
              -# = link_to "Финансирование недвижимости", new_dashboard_re_finance_path, class: 'list-group-item'
              = link_to "Частная недвижимость", new_dashboard_re_private_path, class: 'list-group-item'
              = link_to "Коммерческая недвижимость", new_dashboard_re_commercial_path, class: 'list-group-item'

              = link_to "Услуги", new_dashboard_service_path, class: 'list-group-item'

              = link_to "Агентства по трудоустройству", new_dashboard_job_agency_path, class: 'list-group-item'
              = link_to "Работа", new_dashboard_job_path, class: 'list-group-item'

              = link_to "Продается", new_dashboard_sale_path, class: 'list-group-item'

            .list-group
              = link_to "Задать вопрос", new_question_path, class: 'list-group-item'
              = link_to "Добавить новость", new_dashboard_post_path, class: 'list-group-item'
      / .modal-body

      .modal-footer
        %button.btn.btn-block.mobile-btn{"aria-label" => "Close",
                                "data-dismiss" => "modal",
                                :type => "button"}
          = t(:close)
