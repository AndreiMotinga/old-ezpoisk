%nav.navbar.navbar-fixed-top.navbar-main.shadow
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false",
                            "data-target" => "#bs-example-navbar-collapse-1",
                            "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to main_app.root_path do
        = image_tag "logos/ezpoisk", class: "img-responsive"
      %button.hamburger.is-closed{"data-toggle": "offcanvas", type: "button"}
        %span.hamb-top
        %span.hamb-middle
        %span.hamb-bottom

    #bs-example-navbar-collapse-1.collapse.navbar-collapse

      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Подать объявление", "#new", "data-toggle": "modal"

        / dashboard
        - if !user_signed_in?
          %li= link_to t(:sign_in), "", "data-target": "#new_session_modal", "data-toggle": "modal", id: "login_link"
        - else
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true", "data-toggle": "dropdown", href: "#", role: "button"}
              = current_user.name_to_show
              %span.caret
            %ul.dropdown-menu
              %li= link_to "Панель управления", main_app.dashboard_path
              %li= link_to "Личные данные", edit_dashboard_user_path(current_user)
              %li= link_to "Мои объявления", dashboard_path
              %li= link_to "Избранное", dashboard_favorites_path
              %li.divider{role: "separator"}
              %li= link_to t(:sign_out), main_app.destroy_user_session_path, method: :delete
