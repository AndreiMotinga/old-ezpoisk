= title("#{@re_agency.title} - Агентство Недвижимости #{@re_agency.city.name} #{@re_agency.state.name}")
= desc("#{@re_agency.title}. #{@re_agency.description}")
- content_for :head do
  %meta{property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] }/
  %meta{property: "og:type", content: "business.business"}/
  %meta{property: "og:url", content: re_agency_url(@re_agency) }/
  %meta{property: "og:title", content: @re_agency.title}/
  %meta{property: "og:image", content: @re_agency.logo.url(:medium)}/
  %meta{property: "og:description", content: stripped_200(@re_agency.description)}/
  %meta{property: "place:location:latitude", content: @re_agency.lat}/
  %meta{property: "place:location:longitude", content: @re_agency.lng}/

  %meta{property: "business:contact_data:street_address", content: @re_agency.street}/
  %meta{property: "business:contact_data:locality", content: "USA"}/
  %meta{property: "business:contact_data:postal_code", content: @re_agency.zip}/
  %meta{property: "business:contact_data:country_name", content: "USA"}/

- content_for :secondary_navbar do
  = render "shared/navbars/ezrealty"

= render "shared/show/service", record: @re_agency
