%h5.danger * Все поля являются обязательными
%br/
= bootstrap_form_for([:dashboard, @partner]) do |f|
  .row
    .col-xs-12.col-sm-6
      = f.text_field :title, label: 'Название'
    .col-xs-12.col-sm-6
      = f.text_field :link, label: "Ссылка"
  .row
    .col-xs-12.col-sm-4
      = f.select :position, ["Вверху", "Внизу", "Сбоку"], label: "Позиция"
    .col-xs-12.col-sm-4
      = f.select :page, PAGES, { include_blank: true , label: "Страница" }
    .col-xs-12.col-sm-4
      = form_state_select(f)

  .row
    .col-xs-12
      = f.file_field :image, label: "Банер"

  = f.submit "Сохранить", id: "details-save-btn", class: "btn btn-primary"
