.row.post-item
  .col-xs-4.col-sm-4.logo-js
    = link_to link_from_controller(record) do
      = image_tag record.logo,
                  alt: record.logo,
                  class: "img-responsive"
  .col-xs-8.col-sm-8
    / line 1
    .hidden-xs
      %h3.title= link_to record.title, link_from_controller(record)
    .visible-xs
      %h5.title= link_to record.title, link_from_controller(record)

    /line 3
    %h5= record.street
    %hr.post-devider/

    /line 3
    %span.glyphicon.glyphicon-earphone
    %span.company-phone= number_to_phone(record.phone, area_code: true)
    %hr.post-devider/

    / line 3
    .hidden-xs
      - if record.site.present?
        %strong= link_to record.site, "http://#{record.site}", target: "blank"
        %hr.post-devider/

    / line 4
    .hidden-xs
      %span= time_ago_in_words record.created_at
      назад
