.col-lg-12.col-md-12.col-sm-12.col-xs-12.post
  #logo.col-lg-4.col-md-4.col-sm-4.hidden-xs
    %br/
    = image_tag job_agency.logo.url(:medium),
                alt: job_agency.logo.url(:medium),
                class: 'img-responsive center-block'

  .col-lg-8.col-md-8.col-sm-8.col-xs-12
    / line 1
    %h3.text-center
      = link_to job_agency.title, jobs_job_agency_path(job_agency)

    / line 2
    %strong
      %a{:href => "http://#{job_agency.site}", :target => "blank"}
        = job_agency.site
    %hr.post-devider/

    / line 3
    %span= job_agency.street
    %hr.post-devider/

    / line 4
    %span= job_agency.email
    %span.pull-right
      %span.glyphicon.glyphicon-phone
        = job_agency.phone
    %hr.post-devider/

.row
%br/
