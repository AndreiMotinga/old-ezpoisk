= bootstrap_form_for([:dashboard, @service]) do |f|
  .field
    = f.text_field :title, label: '* Заголовок / Название'

  .field
    = f.text_field :short_description, label: 'Краткое описание'

  .field
    = f.select :category,
                SERVICE_CATEGORIES.keys,
                { include_blank: true, label: '* Раздел' },
                class: "category-select"

  .field
    - if @service.category
      = f.select :subcategory,
                 SERVICE_CATEGORIES,
                 { include_blank: true , label: '* Категория' },
                 class: "subcategory-select"
    - else
      = f.select :subcategory, [], { label: '* Категория' }, class: "subcategory-select"

  /address
  .field
    = f.text_field :street, label: 'Улица'
  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @service)

  .field
    = f.text_field :phone, label: '* Телефон'

  .field
    = f.text_field :fax, label: 'Факс'

  .field
    = f.text_field :site, label: 'Сайт', placeholder: "Пример: www.ezpoisk.com"

  .field
    = f.email_field :email

  .field
    = f.text_area :description, rows: 5, label: 'Описание', class: "summernote"

  .field
    = f.check_box :active, label: "Активно *"

  %br/
  .actions
    = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn"
    %i.fa.fa-question.my-q{"data-toggle": "tooltip", "data-placement": "right" , title: (t :save_tooltip) }

- unless @service.new_record?
  %br/
  = link_to 'Удалить',
            dashboard_service_path(@service),
            method: :delete,
            data: { confirm: I18n.t(:confirm) },
            class: "btn btn-block mobile-btn btn-danger"

%br/
%p
  %strong Активно * -
  = t :active_tooltip
