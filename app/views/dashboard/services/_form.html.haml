.col-lg-6.col-md-8.col-12-sm
  = bootstrap_form_for([:dashboard, @service]) do |f|
    .field
      = f.text_field :title, label: '* Заголовок'

    .field
      = f.select :category,
                  ServiceCategories.keys,
                  include_blank: true,
                  label: '* Раздел'

    .field
      - if @service.category
        = f.select :subcategory,
                   ServiceCategories[@service.category.to_sym],
                   include_blank: true,
                   label: '* Категория'
      - else
        = f.select :subcategory, [], label: '* Категория'


    .field
      = f.select :state_id,
                 State.all.collect {|s| [ s.name, s.id ] },
                 include_blank: true,
                 label: '* Штат'
    .field
      - if @service.state
        = f.select :city_id,
                   @service.state.cities.collect { |c| [c.name, c.id] },
                   label: '* Город'
      - else
        = f.select :city_id, [], label: '* Город'

    .field
      = f.text_field :street, label: 'Улица'

    .field
      = f.text_field :phone, label: 'Телефон'

    .field
      = f.text_field :site, label: 'Сайт'

    .field
      = f.email_field :email

    .field
      = f.check_box :active, label: 'Активно?'

    .actions
      = f.submit "Сохранить", class: "btn btn-primary"
    %br/
