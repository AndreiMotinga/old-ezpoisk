= bootstrap_form_for([:dashboard, @service]) do |f|
  .field
    = f.text_field :title, label: '* Заголовок'

  .field
    = f.text_field :slug, label: 'Краткое описание'

  .field
    = f.select :category,
                SERVICE_CATEGORIES.keys,
                { include_blank: true, label: '* Раздел' },
                class: "category-select"

  .field
    - if @service.category
      = f.select :subcategory,
                 SERVICE_CATEGORIES,
                 { include_blank: true , label: '* Категория' },
                 class: "subcategory-select"
    - else
      = f.select :subcategory, [], { label: '* Категория' }, class: "subcategory-select"

  /address
  .field
    = f.text_field :street, label: 'Улица'
  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @service)

  .field
    = f.text_field :phone, label: '* Телефон'

  .field
    = f.text_field :fax, label: 'Факс'

  .field
    = f.text_field :site, label: 'Сайт'

  .field
    = f.email_field :email

  .field
    .checkbox
      %label{:for => "service_active"}
        %input{:name => "service[active]", :type => "hidden", :value => "0"}
          %input#service_active{:checked => "checked", :name => "service[active]", :type => "checkbox", :value => "1"}
            Активно
      %i.fa.fa-question.my-q{"data-toggle" => "tooltip", "data-placement" => "right" , title: (t :active_tooltip) }

  .field
    - if @service.new_record? && !Rails.env.test?
      = recaptcha_tags
  %br/
  .hidden-xs
    .actions
      = f.submit "Сохранить", id: "details-save-btn", class: "btn btn-primary"
      %i.fa.fa-question.my-q{"data-toggle" => "tooltip", "data-placement" => "right" , title: (t :save_tooltip) }
  .visible-xs
    .actions
      = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn btn-block"

- unless @service.new_record?
  %br/
  = link_to 'Удалить',
            dashboard_service_path(@service),
            method: :delete,
            data: { confirm: I18n.t(:confirm) },
            class: "btn btn-block mobile-btn btn-danger"
