<h2>Re commercials</h2>

<%= link_to 'New Re Commercial', new_dashboard_re_commercial_path %>

<table class="table">
  <thead>
    <tr>
      <th>Street</th>
      <th>Active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @re_commercials.each do |re_commercial| %>
      <tr>
        <td><%= re_commercial.street %></td>
        <td><%= re_commercial.active %></td>
        <td>
          <%= link_to 'Edit', edit_dashboard_re_commercial_path(re_commercial) %>
        </td>
        <td>
          <%= link_to 'Destroy', dashboard_re_commercial_path(re_commercial),
                       method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
