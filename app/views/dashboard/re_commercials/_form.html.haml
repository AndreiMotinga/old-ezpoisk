.col-lg-6.col-md-8.col-12-sm
  = bootstrap_form_for([:dashboard, @re_commercial]) do |f|
    / address
    .field
      = f.text_field :street, label: '* Улица'

    .field
      = f.select :state_id,
                 State.all.collect {|s| [ s.name, s.id ] },
                 include_blank: true,
                 label: '* Штат'
    .field
      - if @re_commercial.state
        = f.select :city_id,
                   @re_commercial.state.cities.collect { |c| [c.name, c.id] },
                   label: '* Город'
      - else
        = f.select :city_id, [], label: '* Город'

    / details
    .field
      = f.select :category,
                  %w(офис торговля промышленность парковка другое),
                  include_blank: true,
                  label: "Категория"
    .field
      = f.select :post_type,
                 %w(продажа аренда),
                 include_blank: true,
                 label: '* Тип обьявления'
    .field
      = f.text_field :price, label: 'Цена'
    .field
      = f.text_field :space, label: 'Площадь'
    .field
      = f.text_field :phone, label: 'Телефон'
    .field
      = f.check_box :active, label: 'Активно?'
    .actions
      = f.submit "Сохранить", class: "btn btn-primary"
