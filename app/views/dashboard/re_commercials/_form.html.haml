= bootstrap_form_for([:dashboard, @re_commercial]) do |f|
  / address
  .field
    = f.text_field :street, label: '* Улица'

  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @re_commercial)

  / details
  .field
    = f.select :post_type,
               RE_TYPES,
               include_blank: true,
               label: '* Тип обьявления'
  .field
    = f.select :category,
                RE_COMMERCIAL_CATEGORIES,
                include_blank: true,
                label: "* Категория"
  .field
    = f.text_field :price, label: '* Цена'
  .field
    = f.text_field :phone, label: '* Телефон'
  .field
    = f.text_field :space, label: 'Площадь'
  .field
    = f.check_box :active, label: 'Активно? *'
  .actions
    = f.submit "Сохранить", class: "btn btn-primary", id: "details-save-btn"
  %br/
  %hr/
  = render "dashboard/shared/active_message"
