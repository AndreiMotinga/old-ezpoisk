.col-lg-6.col-md-8.col-12-sm
  = bootstrap_form_for([:dashboard, @re_private]) do |f|
    / address
    .field
      = f.text_field :street, label: '* Улица'
    .field
      = f.text_field :apt, label: 'Квартира'
    .field
      = f.select :state_id,
                 State.all.collect {|s| [ s.name, s.id ] },
                 include_blank: true,
                 label: '* Штат'
    .field
      - if @re_private.state
        = f.select :city_id,
                   @re_private.state.cities.collect { |c| [c.name, c.id] },
                   label: '* Город'
      - else
        = f.select :city_id, [], label: '* Город'

    / details
    .field
      = f.select :post_type, %w(Продажа Аренда),
                 include_blank: true,
                 label: '* Тип обьявления'
    .field
      = f.select :duration, %w(почасово посуточно помесячно),
                 include_blank: true,
                 label: 'Продолжительность'
    .field
      = f.text_field :price, label: 'Цена'
    .field
      = f.text_field :baths, label: 'Ванные'
    .field
      = f.text_field :space, label: 'Площадь'
    .field
      = f.text_field :rooms, label: 'Комнат'

    .field
      = f.text_field :phone, label: 'Телефон'
    .field
      = f.check_box :active, label: 'Активно?'
    .field
      = f.check_box :fee, label: 'Комиссия'

    .actions
      = f.submit "Сохранить", class: "btn btn-primary"
    %br/
