= bootstrap_form_for([:dashboard, @re_private]) do |f|
  = f.text_field :source, label: "источник" if current_user.admin?
  .row
    .col-sm-8
      = f.text_field :street, label: '* Улица'
    .col-sm-4
      = f.number_field :price, label: '* Цена'

  .field
    = f.text_area :description, rows: 5, label: 'Описание', class: "summernote"

  .row
    .col-sm-6
      .field
        = f.select :post_type, RE_TYPES, include_blank: true, label: '* Тип объявления'
    .col-sm-6
      .field
        = f.select :rooms, ROOM_OPTIONS, label: "* Комнат"

  .row
    .col-sm-4
      .field
        = f.select :duration, RE_DURATION, include_blank: true, label: "Продолжительность"
    .col-sm-4
      .field
        = f.number_field :baths, label: 'Ванные'
    .col-sm-4
      .field
        = f.number_field :space, label: "Площадь (sq. feet)"

  .row
    .col-sm-6
      .field
        = f.text_field :phone, label: 'Телефон'
    .col-sm-6
      .field
        = f.email_field :email, label: 'Email'

  .row
    .col-sm-6
      .field
        = form_state_select(f)
    .col-sm-6
      .field
        = form_city_select(f, @re_private)

  .row
    .col-xs-12
      = f.check_box :active, label: "Активно *"
      = f.check_box :fee, label: "Комиссия *"

  %br/
  .actions
    = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn"
    %i.fa.fa-question.my-q{"data-toggle": "tooltip", "data-placement": "right" , title: (t :save_tooltip) }

- unless @re_private.new_record?
  %br/
  = link_to 'Удалить',
            dashboard_re_private_path(@re_private),
            method: :delete,
            data: { confirm: I18n.t(:confirm) },
            class: "btn btn-block mobile-btn btn-danger"

%br/
%p
  %strong Активно * -
  = t :active_tooltip
%p
  %strong Комиссия * -
  = t :active_tooltip
