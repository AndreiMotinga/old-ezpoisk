.col-xs-12
  .row.post-item
    .col-xs-4.col-sm-4.logo-js
      = link_to link_from_controller(record) do
        = image_tag record.logo_url(:medium), class: "img-responsive",
          alt: "Продается #{record.title}"

    .col-xs-8.col-sm-8
      / line 1
      .hidden-xs
        %h1.title= link_to record.title, link_from_controller(record)
      .visible-xs
        %h1.mob-title= link_to record.title, link_from_controller(record)

      /line 2
      - if record.street.present?
        = record.street
        %hr.post-devider/

      /line 2
      - if record.price.present?
        %strong $ #{record.price}
        %hr.post-devider/

      / line 3
      %span.glyphicon.glyphicon-earphone
      %span.company-phone= number_to_phone(record.phone, area_code: true)
      %hr.post-devider/

      / line 4
      .hidden-xs
        %span= time_ago_in_words record.created_at
