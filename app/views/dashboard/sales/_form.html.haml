= bootstrap_form_for([:dashboard, @sale]) do |f|
  .field
    = f.text_field :title, label: '* Заголовок'
  .field
    = f.text_field :price, label: 'Цена'

  .field
    = f.select :category,
                SALE_CATEGORIES,
                include_blank: true,
                label: '* Категория'

  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @sale)

  .field
    = f.text_field :phone, label: '* Телефон'

  .field
    = f.email_field :email

  / TODO: refactor this and all simial
  .field
    .checkbox
      %label{:for => "sale_active"}
        %input{:name => "sale[active]", :type => "hidden", :value => "0"}
          %input#sale_active{:checked => "checked", :name => "sale[active]", :type => "checkbox", :value => "1"}
            Активно
      %i.fa.fa-question{"data-toggle" => "tooltip", "data-placement" => "right" , title: (t :active_tooltip) }

  .field
    - if @sale.new_record? && !Rails.env.test?
      = recaptcha_tags
  %br/
  .hidden-xs
    .actions
      = f.submit "Сохранить", id: "details-save-btn", class: "btn btn-primary"
      %i.fa.fa-question{"data-toggle" => "tooltip", "data-placement" => "right" , title: (t :save_tooltip) }
  .visible-xs
    .actions
      = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn btn-block"
