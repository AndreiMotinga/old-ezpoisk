.col-lg-6.col-md-8.col-12-sm
  = bootstrap_form_for([:dashboard, @sale]) do |f|
    .field
      = f.text_field :title, label: '* Заголовок'

    .field
      = f.select :category,
                  SaleCategories,
                  include_blank: true,
                  label: '* Категория'

    .field
      = f.select :state_id,
                 State.all.collect {|s| [ s.name, s.id ] },
                 include_blank: true,
                 label: '* Штат'
    .field
      - if @sale.state
        = f.select :city_id,
                   @sale.state.cities.collect { |c| [c.name, c.id] },
                   label: '* Город'
      - else
        = f.select :city_id, [], label: '* Город'

    .field
      = f.text_field :phone, label: 'Телефон'

    .field
      = f.email_field :email

    .field
      = f.check_box :active, label: 'Активно?'

    .actions
      = f.submit "Сохранить", class: "btn btn-primary"
    %br/
