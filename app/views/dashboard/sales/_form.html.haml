= bootstrap_form_for([:dashboard, @sale]) do |f|
  .row
    .col-sm-8
      = f.text_field :title, label: '* Заголовок'
    .col-sm-4
      = f.number_field :price, label: 'Цена'

  = f.text_area :description, rows: 5, label: 'Описание', class: "summernote"

  .row
    .col-sm-4
      = f.select :category, SALE_CATEGORIES, include_blank: true, label: '* Категория'
    .col-sm-4
      = f.text_field :phone, label: 'Телефон'
    .col-sm-4
      = f.email_field :email

  .row
    .col-sm-4
      = f.text_field :street, label: 'Улица'
    .col-sm-4
      = form_state_select(f)
    .col-sm-4
      = form_city_select(f, @sale)

  .field
    = f.check_box :active, label: "Активно *"

  %br/
  .actions
    = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn"
    - unless @sale.new_record?
      = link_to "Удалить", dashboard_sale_path(@sale), method: :delete, data: { confirm: I18n.t(:confirm) }, class: "btn mobile-btn btn-danger"

%br/
%p
  %strong Активно * -
  = t :active_tooltip
