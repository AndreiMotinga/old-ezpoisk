.row.post-item
  .col-xs-4.col-sm-4.logo-js
    = link_to link_from_controller(record), target: "_blank" do
      = image_tag record.logo,
                  alt: record.title,
                  class: "img-responsive"
  .col-xs-8.col-sm-8
    / line 1
    .hidden-xs
      %h1.title= link_to record.title, link_from_controller(record), target: "_blank"
    .visible-xs
      %h1.mob-title= link_to record.title, link_from_controller(record), target: "_blank"

    /line 2
    %span.glyphicon.glyphicon-earphone
    %span.company-phone= record.phone
    %hr.post-devider/

    / line 3
    %strong= record.category
    %hr.post-devider/

    / line 4
    .hidden-xs
      %span= time_ago_in_words record.created_at
      назад
