.col-lg-12.col-md-12.col-sm-12.col-xs-12.post-item
  #logo.col-lg-4.col-md-4.col-sm-4.hidden-xs
    = image_tag record.logo, alt: record.logo, class: "img-responsive"

  .col-lg-8.col-md-8.col-sm-8.col-xs-12
    / line 1
    %h3= link_to record.title, jobs_job_path(record)

    / line 2
    %strong= record.post_type
    %span.pull-right= "#{record.city.name}, #{record.state.name}"
    %hr.post-devider/

    / line 3
    %strong= record.category
    %span.pull-right.glyphicon.glyphicon-phone= record.phone
    %hr.post-devider/

    /line 4
    %span= time_ago_in_words record.created_at
    %hr.post-devider/
