= link_to 'Создать новое',
          new_dashboard_job_path,
          class: "btn btn-success"
%br/
%br/

- if @jobs.any?
  %table.table
    %thead
      %tr
        %th{:colspan => "4"}
    %tbody
      - @jobs.each do |job|
        %tr
          %td
            = link_to job.title, edit_dashboard_job_path(job)
          %td= job.active? ? "Активно" : "Не актвино"
          %td= link_to 'Редактировать', edit_dashboard_job_path(job)
          %td= link_to 'Удалить',
                        dashboard_job_path(job),
                        method: :delete,
                        data: { confirm: I18n.t(:confirm) }

  / Table
  = render "shared/pagination", records: @jobs

- else
  %p= I18n.t(:no_messages)
