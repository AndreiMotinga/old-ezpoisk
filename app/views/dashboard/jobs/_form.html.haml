= bootstrap_form_for([:dashboard, @job]) do |f|
  - if current_user.admin?
    .field
      = f.text_field :source, label: 'источник'

  / details
  .field
    = f.text_field :title, label: '* Заголовок'
  .field
    = f.select :post_type,
               JOB_TYPES,
               include_blank: true,
               label: '* Тип объявлния'
  .field
    = f.select :category,
               JOB_CATEGORIES,
               include_blank: true,
               label: '* Категория'

  / address
  .field
    = f.text_field :street, label: 'Улица'
  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @job)
  .field
    = f.text_field :phone, label: '* Телефон'
  .field
    = f.email_field :email

  .field
    = f.text_area :description, rows: 5, label: 'Описание', class: "summernote"

  .field
    = f.check_box :active, label: "Активно *"

  %br/
  .actions
    = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn"
    %i.fa.fa-question.my-q{"data-toggle": "tooltip", "data-placement": "right" , title: (t :save_tooltip) }

- unless @job.new_record?
  %br/
  = link_to 'Удалить',
            dashboard_job_path(@job),
            method: :delete,
            data: { confirm: I18n.t(:confirm) },
            class: "btn btn-block mobile-btn btn-danger"

%br/
%p
  %strong Активно * -
  = t :active_tooltip
