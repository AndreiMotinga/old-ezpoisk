= bootstrap_form_for([:dashboard, @re_agency]) do |f|
  / address
  .field
    = f.text_field :street, label: '* Улица'
  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @re_agency)

  / details
  .field
    = f.text_field :title, label: '* Название'
  .field
    = f.text_field :phone, label: '* Телефон'
  .field
    = f.text_field :fax, label: 'Факс'
  .field
    = f.text_field :site, label: 'Сайт'
  .field
    = f.email_field :email

  .field
    .checkbox
      %label{:for => "re_agency_active"}
        %input{:name => "re_agency[active]", :type => "hidden", :value => "0"}
          %input#re_agency_active{:checked => "checked", :name => "re_agency[active]", :type => "checkbox", :value => "1"}
            Активно
      %i.fa.fa-question.my-q{"data-toggle" => "tooltip", "data-placement" => "right" , title: (t :active_tooltip) }

  .field
    - if @re_agency.new_record? && !Rails.env.test?
      = recaptcha_tags
  %br/
  .hidden-xs
    .actions
      = f.submit "Сохранить", id: "details-save-btn", class: "btn btn-primary"
      %i.fa.fa-question.my-q{"data-toggle" => "tooltip", "data-placement" => "right" , title: (t :save_tooltip) }
  .visible-xs
    .actions
      = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn btn-block"

- unless @re_agency.new_record?
  %br/
  = link_to 'Удалить',
            dashboard_re_agency_path(@re_agency),
            method: :delete,
            data: { confirm: I18n.t(:confirm) },
            class: "btn btn-block mobile-btn btn-danger"
