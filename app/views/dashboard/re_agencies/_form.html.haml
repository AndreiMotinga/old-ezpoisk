= bootstrap_form_for([:dashboard, @re_agency]) do |f|
  / details
  .field
    = f.text_field :title, label: '* Название'
  .field
    = f.text_field :phone, label: '* Телефон'
  .field
    = f.text_field :fax, label: 'Факс'
  .field
    = f.text_field :site, label: 'Сайт', placeholder: "Пример: www.ezpoisk.com"
  .field
    = f.email_field :email

  / address
  .field
    = f.text_field :street, label: '* Улица'
  .field
    = form_state_select(f)
  .field
    = form_city_select(f, @re_agency)

  .field
    = f.check_box :active, label: "Активно *"

  .field
    = f.text_area :description, rows: 5, label: 'Описание', class: "summernote"

  %br/
  .actions
    = f.submit "Сохранить", id: "details-save-btn", class: "btn mobile-btn"
    - unless @re_agency.new_record?
      = link_to "Удалить", dashboard_re_agency_path(@re_agency), method: :delete, data: { confirm: I18n.t(:confirm) }, class: "btn mobile-btn btn-danger"

%br/
%p
  %strong Активно * -
  = t :active_tooltip
