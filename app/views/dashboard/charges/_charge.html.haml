.col-xs-12.col-sm-4.col-lg-3.col-lg-offset-1
  .white-block.text-center
    .price
      .fa.fa-icon.fa-dollar
      %span.amount= amount
      %span / день
    %span.weeks.text-muted #{weeks} #{word}
    %span.period.text-muted
      = @partner.available_start_date.to_s(:long)
      \ -
      = (@partner.available_start_date + weeks.week).to_s(:long)
    = form_tag link, method: :post do
      %script.stripe-button{"data-amount" => PartnerChargeCalculator.new(weeks, current_user).amount_to_pay,
                            "data-image" => image_url("logos/ez"),
                            "data-key" => ENV["STRIPE_PUBLISHABLE_KEY"],
                            "data-locale" => "auto",
                            "data-name" => @partner.title,
                            "data-allow-remember-me" => "false",
                            "data-email" => current_user.email,
                            :src => "https://checkout.stripe.com/checkout.js"}
