.col-sm-12
  #carousel123.carousel.carousel-showmanymoveone.slide
    .carousel-inner
      - @side_posts.each_with_index do |post, i|
        .item{class: (i == 0 ? "active" : '')}
          .col-xs-12.col-sm-6.col-md-3
            = link_to news_path(post) do
              = image_tag post.logo_url, class: "img-responsive"
            %h5= post.title

    %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel123"}
      %i.glyphicon.glyphicon-chevron-left
    %a.right.carousel-control{"data-slide" => "next", :href => "#carousel123"}
      %i.glyphicon.glyphicon-chevron-right
