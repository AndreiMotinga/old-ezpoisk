.container.container-md
  .row
    .col-xs-12
      h2.text-center= @post.title
      h4.text-center= link_to @post.name_to_show, profile_path(@post.user), target: "_blank"
      - if current_user.try(:can_edit?, @post)
        p.text-center: small= link_to "Редактировать", edit_post_path(@post), class: "text-muted"

  .row
    .col-xs-12
      .panel
        .panel-body
          = raw @post.text

  br
  .row
    .col-xs-12
      = render "shared/comments", record: @post
