= title("#{@job_agency.title} #{@job_agency.city.name} #{@job_agency.state.name}- Агентство по трудоустройству")
= desc("EZPOISK - Агентство по трудоустройству #{@job_agency.title}, #{@job_agency.address}")
- content_for :head do
  %meta{property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] }/
  %meta{property: "og:type", content: "business.business"}/
  %meta{property: "og:url", content: job_agency_url(@job_agency) }/
  %meta{property: "og:title", content: @job_agency.title}/
  %meta{property: "og:image", content: @job_agency.logo.url(:medium)}/
  %meta{property: "og:description", content: strip_tags(@job_agency.description).truncate(200)} /
  %meta{property: "place:location:latitude", content: @job_agency.lat}/
  %meta{property: "place:location:longitude", content: @job_agency.lng}/

  %meta{property: "business:contact_data:street_address", content: @job_agency.street}/
  %meta{property: "business:contact_data:locality", content: "USA"}/
  %meta{property: "business:contact_data:postal_code", content: @job_agency.zip}/
  %meta{property: "business:contact_data:country_name", content: "USA"}/


- content_for :secondary_navbar do
  = render "shared/navbars/ezjob"

= render "shared/show/service", record: @job_agency
