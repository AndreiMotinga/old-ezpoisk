      #dashboard-nav-bar.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          %li{:class => (cp(ezrealty_re_agencies_path))}
            = link_to "Агентства", ezrealty_re_agencies_path
          -# %li{:class => (cp(ezrealty_re_finances_path))}
          -#   = link_to "Финансирование", ezrealty_re_finances_path
          %li{:class => (cp(ezrealty_re_privates_path))}
            = link_to "Частная", ezrealty_re_privates_path
          %li{:class => (cp(ezrealty_re_commercials_path))}
            = link_to "Коммерческая", ezrealty_re_commercials_path
      / /.navbar-collapse
    / /.container-fluid
  / /nav
