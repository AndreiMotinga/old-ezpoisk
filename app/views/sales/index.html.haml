.row
  %h4.pull-right
    %a= "Всего #{@total}"
  = render 'sales/search_modal'
.row
  %hr/
  - @sales.each do |sale|
    = render 'dashboard/sales/sale', sale: sale
- if @sales.empty?
  .row
    = render "shared/no_posts_message"
- else
  .row
    %hr/
    .text-center
      = paginate @sales, :theme => 'twitter-bootstrap-3'
    %hr/
