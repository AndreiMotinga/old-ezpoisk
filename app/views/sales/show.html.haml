.hidden-xs
  = render 'dashboard/sales/sale', sale: @sale
%br
%div
  / Nav tabs
  %ul.nav.nav-tabs{:role => "tablist"}
    %li{:role => "presentation"}
      %a{"aria-controls" => "description", "data-toggle" => "tab", :href => "#description", :role => "tab"} Описание
    %li{:role => "presentation"}
      %a{"aria-controls" => "photo", "data-toggle" => "tab", :href => "#photo", :role => "tab"} Фотографии
    %li{:role => "presentation"}
      %a{"aria-controls" => "messages", "data-toggle" => "tab", :href => "#contacts", :role => "tab"} Контакты

  / Nav tabs
  %hr
    / Tab panes
    .tab-content
      #description.tab-pane.fade.in.active{:role => "tabpanel"}
        = raw @sale.show_description

      #photo.tab-pane.fade{:role => "tabpanel"}
        = render "shared/real_estate/pictures", post: @sale

      #contacts.tab-pane.fade{:role => "tabpanel"}
        = render "shared/real_estate/contacts", post: @sale
  %br/
