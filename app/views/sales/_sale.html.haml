.row.post-item.white-block{ class: ("user-hidden" if sale.user_hidden?(current_user)), "data-hidden": sale.id }
  .col-xs-4.col-sm-4.logo-js
    = link_to sale_path(sale) do
      = image_tag sale.logo_url, class: "img-responsive",
        alt: "Продается #{sale.title}"

  .col-xs-8.col-sm-8
    / line 1
    .hidden-xs
      - if home_controller?
        %h5.title= link_to sale.title, sale_path(sale)
      - else
        %h4.title= link_to sale.title, sale_path(sale)
    .visible-xs
      %h5.title= link_to sale.title, sale_path(sale)

    /line 2
    .hidden-xs
      - if sale.street? && !home_controller?
        = sale.street
        %hr.post-devider/

    /line 2
    - if sale.price?
      %strong $ #{sale.price}
      %hr.post-devider/

    / line 3
    - if sale.phone?
      %span.glyphicon.glyphicon-earphone
      %span.company-phone= sale.phone
      %hr.post-devider/

    / line 4
    .pull-right= render "shared/favor_links", record: sale
    %span= time_ago_in_words sale.updated_at
