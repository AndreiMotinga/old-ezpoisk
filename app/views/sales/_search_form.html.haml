= form_tag sales_path,
           method: :get,
           class: "form-horizontal"

.form-group
  .col-sm-10
    %label
      Введите адрес и радиус поиска
    = origin_text_field_param
  .col-sm-2
    %label
      миль
    = within_text_field_param

%hr
%h5
  Либо выберите штат и город
.form-group
  = label_tag "Штат", nil,  class: "col-sm-3 control-label"
  .col-sm-9
    = select_tag :state_id,
                 state_select_with_param,
                 multiple: true,
                 class: "form-control state-select"

.form-group
  = label_tag "Город", nil,  class: "col-sm-3 control-label"
  .col-sm-9
    = select_tag :city_id,
                 city_select_with_param,
                 class: "form-control city-select"

%hr/

.form-group
  = label_tag "Ключевое слово", nil,  class: "col-sm-3 control-label"
  .col-sm-9
    = text_field_tag :keyword,
                     params[:keyword],
                     class: "form-control"

.form-group
  = label_tag "Раздел", nil,  class: "col-sm-3 control-label"
  .col-sm-9
    = select_tag :category,
      options_for_select(SALE_CATEGORIES, params[:category]),
      include_blank: true,
      class: "form-control"
