- if user_signed_in? && current_user != @user
  = link_to "Сказать спасибо",
            points_path(user_id: @user.id),
            method: "post",
            "data-remote": true,
            class: "btn btn-lg mobile-btn",
            "data-id": "thanks",
            rel: "nofollow"

- elsif !user_signed_in?
  = link_to "Сказать спасибо",
            "",
            "data-target": "#new_session_modal",
            "data-toggle": "modal",
            class: "btn btn-lg mobile-btn",
            id: "login_link",
            rel: "nofollow"
