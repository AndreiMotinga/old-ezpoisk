= bootstrap_form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :title, label: "Ваш вопрос"
  .field
    = f.text_area :text, label: "Подробности", class: "summernote"

  .actions
    = f.submit 'Сохранить', class: "btn btn-success btn-block"
