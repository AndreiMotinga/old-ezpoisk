.row.post-item.white-block{ class: ("user-hidden" if re_commercial.user_hidden?(current_user)), "data-hidden": re_commercial.id }
  .col-xs-4.col-sm-4.logo-js
    = link_to link_to_show_page(re_commercial) do
      = image_tag re_commercial.logo_url, class: "img-responsive",
                  alt: "#{re_commercial.post_type} коммерческой недвижимости - #{re_commercial.street} #{re_commercial.phone}"

  .col-xs-8.col-sm-8
    / line 1
    .hidden-xs
      - if home_controller?
        %h5.title= link_to re_commercial.title, link_to_show_page(re_commercial)
      - else
        %h4.title= link_to re_commercial.title, link_to_show_page(re_commercial)
    .visible-xs
      %h5.title= link_to re_commercial.title, link_to_show_page(re_commercial)

    / line 2
    .hidden-xs
      %strong= "$ #{re_commercial.price}"
      %span= re_commercial.post_type
      %hr.post-devider/
    .visible-xs
      %strong= "$ #{re_commercial.price}"
      %span= re_commercial.post_type
      %hr.post-devider/


    / line 2
    .hidden-xs
      - unless home_controller?
        %span= re_commercial.category
        = "/ #{re_commercial.space }ft." unless re_commercial.space.blank?
        %hr.post-devider/

    / line 3
    %span.glyphicon.glyphicon-earphone
    %span.company-phone= re_commercial.phone
    %hr.post-devider/

    / line 4
    .pull-right= render "shared/favor_links", record: re_commercial
    %span= time_ago_in_words re_commercial.updated_at
