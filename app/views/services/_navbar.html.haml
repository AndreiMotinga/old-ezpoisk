%nav.navbar.navbar-default.white-block
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{ "aria-expanded" => "false",
                                       "data-target" => "#dashboard-nav-bar",
                                       "data-toggle" => "collapse",
                                       :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    / Collect the nav links, forms, and other content for toggling
    #dashboard-nav-bar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - SERVICE_CATEGORIES.keys.each do |category|
          %li.dropdown{:class => ("active" if params[:category] == category)}
            %a.dropdown-toggle{ "aria-expanded" => "false",
                                "aria-haspopup" => "true",
                                "data-toggle" => "dropdown",
                                :role => "button"}
              = category
              %span.caret
            %ul.dropdown-menu
              - SERVICE_CATEGORIES[category].each do |subcategory|
                %li
                  = link_to subcategory, services_path(category: category, subcategory: subcategory)
    / /.navbar-collapse
  / /.container-fluid
