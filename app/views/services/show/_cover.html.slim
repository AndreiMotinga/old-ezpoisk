.row.cover
  .left.col-xs-12.col-sm-4
    .background style="background-image: url(#{@service.cover.url(:large)})"
    .content.text-center
      = image_tag @service.logo.url(:avatar),
                  class: "img-circle center-block",
                  alt: @service.title
      .name= @service.title
      .views
        = "#{@service.visits} просмотров"

  .col-sm-8.right
    = image_tag @service.cover.url(:large), class: "img-responsive"
