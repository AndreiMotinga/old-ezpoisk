= title("#{@service.title} #{@service.city_name} #{@service.state_name}")
= desc("#{@service.title}, #{@service.category} - #{@service.subcategory}, #{@service.address}")
- content_for :head do
  %meta{property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] }/
  %meta{property: "og:type", content: "business.business"}/
  %meta{property: "og:url", content: service_url(@service) }/
  %meta{property: "og:title", content: @service.title}/
  %meta{property: "og:image", content: @service.logo.url(:medium)}/
  %meta{property: "og:description", content: strip_tags(@service.description).truncate(200)}/
  %meta{property: "place:location:latitude", content: @service.lat}/
  %meta{property: "place:location:longitude", content: @service.lng}/

  %meta{property: "business:contact_data:street_address", content: @service.street}/
  %meta{property: "business:contact_data:locality", content: "USA"}/
  %meta{property: "business:contact_data:postal_code", content: @service.zip}/
  %meta{property: "business:contact_data:country_name", content: "USA"}/

= content_for :sidebar, render("shared/show/contacts", record: @service)

.col-xs-12
  = render @service

- if @service.description.present?
  .col-xs-12.white-block.description
    .panel.panel-default
      .panel-body
        = sanitize @service.description

.col-xs-12
  = render "shared/show/map", record: @service

.visible-xs
  = render "shared/show/contacts", record: @service

%br/
%br/
= render "shared/partners/bottom"
